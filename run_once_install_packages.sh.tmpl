#!/usr/bin/env bash

#==============================================================================
# Installing packages from apt
#==============================================================================

#!/bin/bash

# Function to check if a package is installed
check_installed() {
    if dpkg -s "$1" &> /dev/null; then
        return 0  # Package is installed
    else
        return 1  # Package is not installed
    fi
}

# Function to install a package
install_package() {
    sudo apt-get install -y "$1"
    echo "$1 has been installed successfully."
}

# Array of package names

packages=("adb" "appflowy" "atomicparsley" "build-essential" "cheese" "cmake" "cmus" "docker-compose" "docker-compose-plugin" "firmware-iwlwifi" "firmware-linux" "firmware-realtek" "ffmpeg" "ffmpegthumbnailer" "flatpak" "gcc" "gimp" "gzip" "hugo" "htop" "ktorrent" "libegl1-mesa-dev" "libssl-dev" "lsb-release" "make" "pgadmin4-desktop" "pipx" "sigil" "libreadline-dev" "openssl" "python3-pip" "libssl-dev" "libffi-dev" "libbz2-dev" "lzma-dev" "liblzma-dev" "python3-dev" "ripgrep" "rsync" "shotcut" "stripe" "vibe" "vlc" "ffmpegthumbnailer")


# Iterate over each package
for pkg in "${packages[@]}"; do
    if ! check_installed "$pkg"; then
        install_package "$pkg"
    fi
done
