# Installing pip
#==============================================================================

#!/bin/bash

# install pip if not already installed
if command -v pip >/dev/null 2>&1; then
  echo "pip already installed"
else
  echo "pip not found, installing..."
  curl -sSL https://bootstrap.pypa.io/get-pip.py -o get-pip.py
  python3 get-pip.py
fi
